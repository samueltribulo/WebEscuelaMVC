@model IEnumerable<WebEscuelaMVC.Models.Aula>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h1>Aulas</h1>

    @Html.ActionLink("Crear aula", "Create", "Aula")

    <table>

        <tr>

            <th>@Html.DisplayNameFor(model => model.Numero)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>

                <td>
                    @Html.ActionLink("Ver", "Details", "Aula", new {id = item.Id})
                    @Html.ActionLink("Borrar", "Delete", "Aula", new {id = item.Id})
                    @Html.ActionLink("Editar", "Edit", "Aula", new {id = item.Id})

                </td>
            </tr>

        }

    </table>


</body>
</html>
